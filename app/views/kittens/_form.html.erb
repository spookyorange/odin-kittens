<%= notice %>
<br /><br /><br />
<%= form_with model: kitten do |f| %>
  <%= f.label :name, "Name of the kitten:" %>
  <%= f.text_field :name %><br /><br />
  <%= f.label :age, "Age of the kitten:" %>
  <%= f.number_field :age %><br /><br />
  <%= f.label :softness, "How soft is the kitten:" %>
  <%= f.number_field :softness %><br /><br />
  <%= f.label :cuteness, "How cute is the kitten:" %>
  <%= f.number_field :cuteness %><br /><br />

  <%= f.submit "Add the kitten" %>

<% end %>
